{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": "src"
    },
    "include": ["./src/**/*.ts"]
}
